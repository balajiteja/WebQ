<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>WebQuiz</display-name>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
	<filter>
	  <filter-name>sitemesh</filter-name>
	  <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
	</filter>
	 
	<filter-mapping>
	  <filter-name>sitemesh</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>this is a test servlet for the quiz proj</description>
    <display-name>QuizDemoServlet</display-name>
    <servlet-name>QuizDemoServlet</servlet-name>
    <servlet-class>com.java.asep.web.quiz.QuizDemoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuizDemoServlet</servlet-name>
    <url-pattern>/QuizDemoServlet.html</url-pattern>
  </servlet-mapping>
</web-app>